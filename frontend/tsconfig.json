{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "lib/*": ["lib/*"],
      "hooks/*": ["hooks/*"],
      "types/*": ["types/*"],
      "styles/*": ["styles/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "pages",
    "components",
    "lib",
    "hooks",
    "types",
    "styles",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}